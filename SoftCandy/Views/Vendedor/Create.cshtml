@model SoftCandy.Models.Vendedor

@{
    ViewData["Title"] = "Criar Vendedor";
}

<h2>Criar Vendedor</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome_Vendedor" class="control-label"></label>
                <input asp-for="Nome_Vendedor" class="form-control" />
                <span asp-validation-for="Nome_Vendedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Celular_Vendedor" class="control-label"></label>
                <input asp-for="Celular_Vendedor" class="form-control" />
                <span asp-validation-for="Celular_Vendedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Endereco_Vendedor" class="control-label"></label>
                <input asp-for="Endereco_Vendedor" class="form-control" />
                <span asp-validation-for="Endereco_Vendedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email_Vendedor" class="control-label"></label>
                <input asp-for="Email_Vendedor" class="form-control" />
                <span asp-validation-for="Email_Vendedor" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Criar Vendedor" class="btn btn-success" /> |
                <a asp-action="Index" class="btn btn-primary"> Voltar</a>
            </div>
        </form>
    </div>
</div>

