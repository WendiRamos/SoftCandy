@model SoftCandy.Models.Vendedor
@{
    ViewData["Title"] = "Conecte-se";

}

<center>
    <div class="card border-danger mb-3" style="max-width: 20rem;">
        <div class="card-header">Entre com suas credenciais!</div>
        <div class="card-body">
            <h4 class="card-title">Vendedor:</h4>
            <form asp-controller="Vendedor" asp-action="Login" method="post" autocomplete="off">
                <div asp-validation-summary="ModelOnly" class="text-dark"></div>
                <div class="form-group">
                    <label asp-for="EmailVendedor" class="control-label">Email:</label>
                    <input type="text" asp-for="EmailVendedor" class="form-control" id="emailVendedor" />
                    <span class="invisivel" id="erroEmailVendedor">Insira um e-mail válido!</span>
                </div>
                <div class="form-group">
                    <label asp-for="SenhaVendedor" class="control-label">Senha:</label>
                    <input type="password" asp-for="SenhaVendedor" class="form-control" id="senhaVendedor" />
                    <span class="invisivel" id="erroSenhaVendedor">Insira uma senha válida!</span>
                </div>
                <br />
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-primary mr-1">Voltar</a>
                    <input type="submit" onclick="return validarLoginVendedor()" value="Entrar" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</center>
<script src="~/js/Vendedor.js"></script>