@model SoftCandy.Models.Vendedor

@{
    ViewData["Title"] = "Restaurar";
}
<br />
<center>
    <div class="card border-primary mb-3" style="max-width: 40rem;">
        <div class="card-header"><h4>Restaurar Vendedor</h4></div>
        <div class="card-body">
            <h5>Tem certeza que deseja restaurar?</h5>
            <div>
                <table class="table">
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.IdVendedor): </td>
                        <td>@Html.DisplayFor(model => model.IdVendedor)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.NomeVendedor): </td>
                        <td>@Html.DisplayFor(model => model.NomeVendedor)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.CelularVendedor): </td>
                        <td>@Html.DisplayFor(model => model.CelularVendedor)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.EmailVendedor): </td>
                        <td>@Html.DisplayFor(model => model.EmailVendedor)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.LogradouroVendedor):</td>
                        <td>@Html.DisplayFor(model => model.LogradouroVendedor)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.NumeroVendedor): </td>
                        <td>@Html.DisplayFor(model => model.NumeroVendedor)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.BairroVendedor): </td>
                        <td>@Html.DisplayFor(model => model.BairroVendedor)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.CidadeVendedor): </td>
                        <td>@Html.DisplayFor(model => model.CidadeVendedor)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.EstadoVendedor): </td>
                        <td>@Html.DisplayFor(model => model.EstadoVendedor)</td>
                    </tr>
                </table>
                <br />
                <form asp-action="Restore">
                    <input type="hidden" asp-for="IdVendedor" />
                    <input type="submit" value="Restaurar" class="btn btn-danger mr-1" />
                    <a asp-action="Index" class="btn btn-primary">Voltar</a>
                </form>
            </div>
        </div>
    </div>
</center>