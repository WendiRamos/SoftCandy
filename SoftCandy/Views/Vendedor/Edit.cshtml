@model SoftCandy.Models.Vendedor

@{
    ViewData["Title"] = "Editar";
}

<h2>Editar vendedor</h2>

<h4>Vendedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-dark"></div>
            <input type="hidden" asp-for="IdVendedor" />
            <div class="form-group">
                <label asp-for="NomeVendedor" class="control-label">Novo Nome</label>
                <input asp-for="NomeVendedor" id="nome" class="form-control" />
                <span class="invisivel" id="erroNome">Insira um nome válido!</span>
            </div>
            <div class="form-group">
                <label asp-for="CelularVendedor" class="control-label">Novo Celular</label>
                <input asp-for="CelularVendedor" id="celular" class="form-control" />
                <span class="invisivel" id="erroCelular">Insira um celular válido!</span>
            </div>
            <div class="form-group">
                <label asp-for="EnderecoVendedor" class="control-label">Novo Endereço</label>
                <input asp-for="EnderecoVendedor" id="endereco" class="form-control" />
                <span class="invisivel" id="erroEndereco">Insira um endereço válido!</span>
            </div>
            <div class="form-group">
                <label asp-for="EmailVendedor" class="control-label">Novo E-mail</label>
                <input asp-for="EmailVendedor" id="email" class="form-control" />
                <span class="invisivel" id="erroEmail">Insira um e-mail válido!</span>
            </div>
            <div class="form-group">
                <label asp-for="SenhaVendedor" class="control-label">Nova Senha</label>
                <input autocomplete="off" type="password" asp-for="SenhaVendedor" id="senha" class="form-control" />
                <span class="invisivel" id="erroSenha">Insira uma senha válida!</span>
            </div>
            <div class="form-group">
                <label class="control-label">Confirmar nova senha</label>
                <input autocomplete="off" type="password" class="form-control" id="senhaConfirma" />
                <span class="invisivel" id="erroSenhaConfirma"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" onclick="return validarEditarVendedor()" value="Salvar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-primary">Voltar</a>
            </div>
        </form>
    </div>
</div>
