@model IEnumerable<SoftCandy.Models.Comanda>

@{
    ViewData["Title"] = "Comandas Abertas";
}
<form asp-controller="Comanda" asp-action="Create">
    <button type="submit" value="Criar Comanda" formtarget="_blank" class="btn btn-success">Criar Comanda</button>
</form>
<br />
<center>
    <div class="card border-primary mb-3">
        <div class="card-header"><h4>Pedidos</h4></div>
        <div class="card-body">
            @if (Model.Count() != 0)
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ValorTotal)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DataHoraCriacao)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DataHoraRecebimento)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IdCaixa)
                            </th>
                            <th class="center">
                                Visualizar
                            </th>
                            <th class="center">
                                Apagar
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                R$ @Html.DisplayFor(modelItem => item.ValorTotal)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DataHoraCriacao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DataHoraRecebimento)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdCaixa)
                            </td>
                            <td class="center">
                                <a asp-action="Details" asp-route-id="@item.Id" class="sem-sub">
                                    <img src="~/icons/detalhes.svg" class="icone-menus" title="Visualizar" />
                                </a>
                            </td>
                            <td class="center">
                                <a asp-action="Delete" asp-route-id="@item.Id" class="sem-sub">
                                    <img src="~/icons/deletar.svg" class="icone-menus" title="Apagar" />
                                </a>

                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>Não tem pedidos para mostrar</p>
            }
        </div>
    </div>
</center>
