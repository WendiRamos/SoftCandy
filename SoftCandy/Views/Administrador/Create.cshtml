@model SoftCandy.Models.Administrador

@{
    ViewData["Title"] = "Criar";
}
<br />
<center>
    <div class="card border-primary mb-3" style="max-width: 40rem;">
        <div class="card-header"><h4>Criar Administrador</h4></div>
        <div class="card-body">
            <div class="row-center">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-dark"></div>
                    <div class="row">
                        <div class="col">
                            <label asp-for="NomeAdministrador" class="control-label">Nome:</label>
                            <input asp-for="NomeAdministrador" id="nomeAdministrador" class="form-control" />
                            <span class="invisivel" id="erroNomeAdministrador">Insira um nome válido!</span>
                        </div>
                        <div class="col">
                            <label asp-for="CelularAdministrador" class="control-label">Celular:</label>
                            <input asp-for="CelularAdministrador" id="celularAdministrador" class="form-control" />
                            <span class="invisivel" id="erroCelularAdministrador">Insira um celular válido!</span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <label asp-for="LogradouroAdministrador" class="control-label">Logradouro:</label>
                            <input asp-for="LogradouroAdministrador" id="logradouroAdministrador" class="form-control" />
                            <span class="invisivel" id="erroLogradouroAdministrador">Insira um logradouro válido!</span>
                        </div>
                        <div class="col">
                            <label asp-for="NumeroAdministrador" class="control-label">Número:</label>
                            <input asp-for="NumeroAdministrador" id="numeroAdministrador" class="form-control" />
                            <span class="invisivel" id="erroNumeroAdministrador">Insira um número válido!</span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <label asp-for="BairroAdministrador" class="control-label">Bairro:</label>
                            <input asp-for="BairroAdministrador" id="bairroAdministrador" class="form-control" />
                            <span class="invisivel" id="erroBairroAdministrador">Insira um bairro válido!</span>
                        </div>
                        <div class="col">
                            <label asp-for="CidadeAdministrador" class="control-label">Cidade:</label>
                            <input asp-for="CidadeAdministrador" id="cidadeAdministrador" class="form-control" />
                            <span class="invisivel" id="erroCidadeAdministrador">Insira uma cidade válida!</span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <label asp-for="EstadoAdministrador" class="control-label">Estado:</label>
                            <input asp-for="EstadoAdministrador" id="estadoAdministrador" class="form-control" />
                            <span class="invisivel" id="erroEstadoAdministrador">Insira um estado válido!</span>
                        </div>
                        <div class="col">
                            <label asp-for="EmailAdministrador" class="control-label">E-mail:</label>
                            <input asp-for="EmailAdministrador" id="emailAdministrador" class="form-control" />
                            <span class="invisivel" id="erroEmailAdministrador">Insira um e-mail válido!</span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <label asp-for="SenhaAdministrador" class="control-label">Senha:</label>
                            <input autocomplete="off" type="password" asp-for="SenhaAdministrador" id="senhaAdministrador" class="form-control" />
                            <span class="invisivel" id="erroSenhaAdministrador">Insira uma senha válida!</span>
                        </div>
                        <div class="col">
                            <label class="control-label">Confirmar senha:</label>
                            <input autocomplete="off" type="password" class="form-control" id="senhaConfirmaAdministrador" />
                            <span class="invisivel" id="erroSenhaConfirmaAdministrador"></span>
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" onclick="return validarAdministrador()" value="Salvar" class="btn btn-success mr-1" />
                        <a asp-action="Index" class="btn btn-primary">Voltar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</center>
<script src="~/js/Administrador.js"></script>