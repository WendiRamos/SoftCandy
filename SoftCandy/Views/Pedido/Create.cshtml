@model SoftCandy.Models.Pedido

@{
    ViewData["Title"] = "Criar Pedido";
}

<h2>Criar Pedido</h2>

<h4></h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Valor_Total" class="control-label"></label>
                <input asp-for="Valor_Total" class="form-control" />
                <span asp-validation-for="Valor_Total" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desconto" class="control-label"></label>
                <input asp-for="Desconto" class="form-control" />
                <span asp-validation-for="Desconto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data_Pedido" class="control-label"></label>
                <input asp-for="Data_Pedido" class="form-control" />
                <span asp-validation-for="Data_Pedido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
