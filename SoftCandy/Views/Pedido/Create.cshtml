@using Newtonsoft.Json;
@model SoftCandy.Models.RealizarPedido

@{
    ViewData["Title"] = "Realizar Pedido";
}
<br />
<div class="card border-primary mb-3">
    <div class="card-header center"><h4>Realizar Pedido</h4></div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-dark"></div>
                    <div class="form-group">
                        <label asp-for="IdCliente" class="control-label">Selecione o Cliente:</label>
                        <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.IdCliente">
                            <option>Venda sem cadastro</option>
                        </select>
                    </div>
                </form>

            </div>
        </div>
        <br />
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Produto</th>
                    <th>Preço</th>
                    <th>Quantidade</th>
                    <th>Subtotal</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="itens-pedido"></tbody>
            <tfoot>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td class="negrito">Total:</td>
                    <td id="total-pedido" class="negrito"></td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
        <div class="d-flex justify-content-between">
            <div class="d-flex">
                <button id="enviar" class="btn btn-success" onclick="enviarPedido()">Enviar</button>
            </div>
                <div class="d-flex">
                    <label for="Nome"></label>
                    <input type="text" class="form-control mr-1" id="pesquisar" placeholder="Nome do produto"/>
                    <button type="button" onclick="procurarProdutos()" class=" btn btn-primary">Pesquisar</button>
                </div>
        </div>

        <br />
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Nome
                    </th>
                    <th>
                        Estoque
                    </th>
                    <th>
                        Preço
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="tabelaProdutos"></tbody>
        </table>
    </div>
</div>
<script src="~/js/Formatador.js" defer></script>
<script src="~/js/RealizarPedido.js" defer></script>


