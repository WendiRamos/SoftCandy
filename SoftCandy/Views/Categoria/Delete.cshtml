@model SoftCandy.Models.Categoria

@{
    ViewData["Title"] = "Deletar Categoria";
}

<h2>Deletar Categoria</h2>

<h3>
    Tem certeza que deseja excluir?
</h3>
<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NomeCategoria)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NomeCategoria)
        </dd>
    </dl>
    <br />
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdCategoria" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Voltar</a>
    </form>
</div>
