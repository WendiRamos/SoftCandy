@model SoftCandy.Models.Categoria

@{
    ViewData["Title"] = "Deletar Categoria";
}
<br />
<center>
    <div class="card border-primary mb-3" style="max-width: 50rem;">
        <div class="card-header"><h4>Deletar Categoria</h4></div>
        <div class="card-body">
            <h5>Tem certeza que deseja excluir?</h5>
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.IdCategoria)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.IdCategoria)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.NomeCategoria)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.NomeCategoria)
                    </dd>
                </dl>
                <br />
                <form asp-action="Delete">
                    <input type="hidden" asp-for="IdCategoria" />
                    <input type="submit" value="Deletar" class="btn btn-danger mr-1" />
                    <a asp-action="Index" class="btn btn-primary">Voltar</a>
                </form>
            </div>
        </div>
    </div>
</center>