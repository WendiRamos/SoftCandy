@model IEnumerable<SoftCandy.Models.Categoria>

@{
    ViewData["Title"] = "Categorias";
}
<form class="form-inline" asp-controller="Busca" asp-action="BuscaCategoria">
    <div class="d-flex justify-content-between">
        <div class="d-flex">
            <a asp-action="Create" class="btn btn-success mr-1">Nova Categoria</a>
            <a asp-controller="Busca" asp-action="BuscaCategoriaApagada" class="btn btn-info">Categorias Apagadas</a>
        </div>
        <div class="d-flex">
            <label for="Nome"></label>
            <input type="text" class="form-control mr-1" name="Nome" placeholder="Insira um nome" value=@ViewData["Nome"] />
            <button type="submit" class=" btn btn-primary">Pesquisar</button>
        </div>
    </div>
</form>
<br />
<center>
    <div class="card border-primary mb-3">
        <div class="card-header"><h4>Categorias</h4></div>
        <div class="card-body">
            @if (Model.Count() != 0)
            {
                <table class="table">
                    <thead>
                        <tr class="text-center">
                            <th>
                                @Html.DisplayNameFor(model => model.IdCategoria)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NomeCategoria)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="text-center">
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdCategoria)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NomeCategoria)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.IdCategoria">
                                        <img src="~/icons/editar.svg" class="icone-menus" title="Editar" />
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.IdCategoria">
                                        <img src="~/icons/detalhes.svg" class="icone-menus" title="Detalhes" />
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.IdCategoria">
                                        <img src="~/icons/deletar.svg" class="icone-menus" title="Deletar" />
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>Não tem categorias para mostrar</p>
            }
        </div>
    </div>
</center>
