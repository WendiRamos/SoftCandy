@model IEnumerable<SoftCandy.Models.Categoria>

@{
    ViewData["Title"] = "Categorias";
}

<h2>Categorias</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Nova Categoria</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id_Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome_Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome_Categoria)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_Categoria">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id_Categoria">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_Categoria">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
