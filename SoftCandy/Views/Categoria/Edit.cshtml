@model SoftCandy.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoria";
}

<h2>Editar Categoria</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id_Categoria" />
            <div class="form-group">
                <label asp-for="Nome_Categoria" class="control-label"></label>
                <input asp-for="Nome_Categoria" class="form-control" />
                <span asp-validation-for="Nome_Categoria" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-primary">Voltar</a>
            </div>
        </form>
    </div>
</div>
