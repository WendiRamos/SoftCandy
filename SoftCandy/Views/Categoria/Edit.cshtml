@model SoftCandy.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoria";
}
<br />
<center>
    <div class="card border-primary mb-3" style="max-width: 50rem;">
        <div class="card-header"><h4>Editar Categoria</h4></div>
        <div class="card-body">
            <div class="row-center">
                <div class="col-md-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="IdCategoria" />
                        <div class="form-group">
                            <label asp-for="NomeCategoria" class="control-label"></label>
                            <input asp-for="NomeCategoria" id="NomeCategoria" class="form-control" />
                            <span class="invisivel" id="erroNomeCategoria">Insira um nome válido!</span>
                        </div>
                        <br />
                        <div class="form-group">
                            <input type="submit" onclick="return validarCategoria()" value="Salvar" class="btn btn-success mr-1" />
                            <a asp-action="Index" class="btn btn-primary">Voltar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</center>