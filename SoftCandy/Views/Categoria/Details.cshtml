@model SoftCandy.Models.Categoria

@{
    ViewData["Title"] = "Detalhes Categoria";
}
<br />
<center>
    <div class="card border-primary mb-3" style="max-width: 50rem;">
        <div class="card-header"><h4>Detalhes Categoria</h4></div>
        <div class="card-body">
            <div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.IdCategoria)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NomeCategoria)
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayFor(model => model.IdCategoria)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.NomeCategoria)
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <br />
            <div>
                <a asp-action="Edit" asp-route-id="@Model.IdCategoria" class="btn btn-info mr-1">Editar</a>
                <a asp-action="Index" class="btn btn-primary">Voltar</a>
            </div>
        </div>
    </div>
</center>