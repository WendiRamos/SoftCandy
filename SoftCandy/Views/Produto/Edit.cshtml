@model SoftCandy.Models.Produto
@using SoftCandy.Enums
@{
    ViewData["Title"] = "Editar Produto";
}
<br />
<center>
    <div class="card border-primary mb-3" style="max-width: 40rem;">
        <div class="card-header"><h4>Editar Produto</h4></div>
        <div class="card-body">
            <div class="row-center">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="row">
                        <div class="col">
                            <label asp-for="Nome" class="control-label">Nome:</label>
                            <input asp-for="Nome" id="nomeProduto" class="form-control" autocomplete="off"/>
                            <span asp-validation-for="Nome" class="text-red"></span>
                        </div>
                        <div class="col">
                            <label asp-for="QuantidadeMinima" class="control-label">Quantidade Mínima:</label>
                            <input asp-for="QuantidadeMinima" type="number" class="form-control" autocomplete="off"/>
                            <span asp-validation-for="QuantidadeMinima" class="text-red"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label asp-for="IdCategoria" class="control-label">Categoria:</label>
                            <select asp-for="IdCategoria" class="form-control" asp-items="ViewBag.CAT"></select>
                        </div>
                        <div class="col">
                            <label asp-for="IdFornecedor" class="control-label">Fornecedor:</label>
                            <select asp-for="IdFornecedor" class="form-control" asp-items="ViewBag.FOR"></select>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col">
                            <span>Medida:</span>
                        </div>
                        <div class="col">
                            <select id="Medida" asp-for="Medida" class="form-control" asp-items="Html.GetEnumSelectList<MedidaEnum>()"></select>
                        </div>
                    </div>

                    <br />
                    <div class="form-group">
                        <a href="javascript:history.go(-1)" class="btn btn-primary mr-1">Voltar</a>
                        <input type="submit" value="Salvar" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</center>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}