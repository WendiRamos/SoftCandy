@model IEnumerable<SoftCandy.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
}
<a asp-controller="Produto" asp-action="Index" class="btn btn-info">Voltar</a>
<p>   </p>
<center>
    <div class="card border-primary mb-3">
        <div class="card-header"><h4>Produtos com baixo estoque</h4></div>
        <div class="card-body">
            @if (Model.Count() != 0)
            {


                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.IdProduto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NomeProduto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.QuantidadeProduto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.QuantidadeMinimaProduto)
                            </th>
                            <th>
                                Fornecedor
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdProduto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NomeProduto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.QuantidadeProduto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.QuantidadeMinimaProduto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Fornecedor.NomeFantasia)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>Não tem produtos para mostrar</p>
            }
        </div>
    </div>
</center>
