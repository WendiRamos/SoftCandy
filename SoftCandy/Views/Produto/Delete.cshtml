@model SoftCandy.Models.Produto

@{
    ViewData["Title"] = "Deletar Produto";
}

<h2>Deletar Produto</h2>

<h3>Tem certeza que deseja deletar?</h3>
<div>
    <h4>Produto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NomeProduto)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NomeProduto)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.QuantidadeProduto)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.QuantidadeProduto)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PrecoVendaProduto)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PrecoVendaProduto)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DescricaoProduto)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DescricaoProduto)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Categoria.NomeCategoria)
        </dd>
