@model SoftCandy.Models.Funcionario

@{
    ViewData["Title"] = "Deletar";
}
<br />
<center>
    <div class="card border-primary mb-3" style="max-width: 40rem;">
        <div class="card-header"><h4>Deletar Estoquista</h4></div>
        <div class="card-body">
            <h5>Tem certeza que deseja excluir?</h5>
            <div>
                <table class="table">
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Id): </td>
                        <td>@Html.DisplayFor(model => model.Id)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Nome): </td>
                        <td>@Html.DisplayFor(model => model.Nome)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Celular): </td>
                        <td>@Html.DisplayFor(model => model.Celular)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Email): </td>
                        <td>@Html.DisplayFor(model => model.Email)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Logradouro):</td>
                        <td>@Html.DisplayFor(model => model.Logradouro)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Numero): </td>
                        <td>@Html.DisplayFor(model => model.Numero)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Bairro): </td>
                        <td>@Html.DisplayFor(model => model.Bairro)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Cidade): </td>
                        <td>@Html.DisplayFor(model => model.Cidade)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Estado): </td>
                        <td>@Html.DisplayFor(model => model.Estado)</td>
                    </tr>
                </table>
                <br />
                <form asp-action="Delete">
                    <a asp-action="Index" class="btn btn-primary mr-1">Voltar</a>
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Deletar" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</center>