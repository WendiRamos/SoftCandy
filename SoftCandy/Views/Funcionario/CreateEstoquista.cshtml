@model SoftCandy.Models.Funcionario

@{
    ViewData["Title"] = "Cadastrar Estoquista";
}
<br />
<center>
    <div class="card border-primary mb-3" style="max-width: 40rem;">
        <div class="card-header"><h4>Cadastrar Estoquista</h4></div>
        <div class="card-body">
            <div class="row-center">
                <form asp-action="CreateEstoquista">
                    <div asp-validation-summary="ModelOnly" class="text-dark"></div>
                    <input type="hidden" asp-for="Cargo" value="2" />
                    <div class="row">
                        <div class="col">
                            <label asp-for="Nome" class="control-label">Nome:</label>
                            <input asp-for="Nome" id="nome" class="form-control" />
                            <span class="invisivel" id="erroNome">Insira um nome válido!</span>
                        </div>
                        <div class="col">
                            <label asp-for="Celular" class="control-label">Celular:</label>
                            <input asp-for="Celular" id="celular" class="form-control" />
                            <span class="invisivel" id="erroCelular">Insira um celular válido!</span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <label asp-for="Logradouro" class="control-label">Logradouro:</label>
                            <input asp-for="Logradouro" id="logradouro" class="form-control" />
                            <span class="invisivel" id="erroLogradouro">Insira um logradouro válido!</span>
                        </div>
                        <div class="col">
                            <label asp-for="Numero" class="control-label">Número:</label>
                            <input asp-for="Numero" id="numero" class="form-control" />
                            <span class="invisivel" id="erroNumero">Insira um número válido!</span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <label asp-for="Bairro" class="control-label">Bairro:</label>
                            <input asp-for="Bairro" id="bairro" class="form-control" />
                            <span class="invisivel" id="erroBairro">Insira um bairro válido!</span>
                        </div>
                        <div class="col">
                            <label asp-for="Cidade" class="control-label">Cidade:</label>
                            <input asp-for="Cidade" id="cidade" class="form-control" />
                            <span class="invisivel" id="erroCidade">Insira uma cidade válida!</span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <label asp-for="Estado" class="control-label">Estado:</label>
                            <input asp-for="Estado" id="estado" class="form-control" />
                            <span class="invisivel" id="erroEstado">Insira um estado válido!</span>
                        </div>
                        <div class="col">
                            <label asp-for="Email" class="control-label">E-mail:</label>
                            <input asp-for="Email" id="email" class="form-control" />
                            <span class="invisivel" id="erroEmail">Insira um e-mail válido!</span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <label asp-for="Senha" class="control-label">Senha:</label>
                            <input autocomplete="off" type="password" asp-for="Senha" id="senha" class="form-control" />
                            <span class="invisivel" id="erroSenha">Insira uma senha válida!</span>
                        </div>
                        <div class="col">
                            <label class="control-label">Confirmar senha:</label>
                            <input autocomplete="off" type="password" class="form-control" id="senhaConfirma" />
                            <span class="invisivel" id="erroSenhaConfirma"></span>
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <a href="javascript:history.go(-1)" class="btn btn-primary mr-1">Voltar</a>
                        <input type="submit" onclick="return validarFuncionario()" value="Salvar" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</center>
<script src="~/js/Funcionario.js"></script>