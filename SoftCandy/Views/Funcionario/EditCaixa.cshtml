@model SoftCandy.Models.Funcionario
@using SoftCandy.Enums
@{
    ViewData["Title"] = "Editar Caixa";
}
<br />
<center>
    <div class="card border-primary mb-3" style="max-width: 40rem;">
        <div class="card-header"><h4>Editar Caixa</h4></div>
        <div class="card-body">
            <div class="row-center">
                <form asp-action="EditCaixa">
                    <div asp-validation-summary="ModelOnly" class="text-dark"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="row">
                        <div class="col">
                            <label asp-for="Nome" class="control-label">Nome:</label>
                            <input asp-for="Nome" id="nome" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Nome" class="text-red"></span>
                        </div>
                        <div class="col">
                            <label asp-for="Celular" class="control-label">Celular:</label>
                            <input asp-for="Celular" id="celular" class="form-control" placeholder="Apenas números" autocomplete="off" />
                            <span asp-validation-for="Celular" class="text-red"></span>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col">
                            <label asp-for="Logradouro" class="control-label">Logradouro:</label>
                            <input asp-for="Logradouro" id="logradouro" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Logradouro" class="text-red"></span>
                        </div>
                        <div class="col">
                            <label asp-for="Numero" class="control-label">Número:</label>
                            <input asp-for="Numero" id="numero" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Numero" class="text-red"></span>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col">
                            <label asp-for="Bairro" class="control-label">Bairro:</label>
                            <input asp-for="Bairro" id="bairro" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Bairro" class="text-red"></span>
                        </div>
                        <div class="col">
                            <label asp-for="Cidade" class="control-label">Cidade:</label>
                            <input asp-for="Cidade" id="cidade" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Cidade" class="text-red"></span>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col">
                            <label asp-for="Estado" class="control-label">Estado:</label>
                            <input asp-for="Estado" id="estado" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Estado" class="text-red"></span>
                        </div>
                        <div class="col">
                            <label asp-for="Email" class="control-label">E-mail:</label>
                            <input asp-for="Email" id="email" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Email" class="text-red"></span>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col">
                            <label asp-for="Senha" class="control-label">Senha:</label>
                            <input autocomplete="off" type="password" asp-for="Senha" id="senha" class="form-control" />
                            <span asp-validation-for="Senha" class="text-red"></span>
                        </div>
                        <div class="col">
                            <label asp-for="ConfirmarSenha" class="control-label">Confirmar senha:</label>
                            <input autocomplete="off" type="password" asp-for="ConfirmarSenha" class="form-control" id="senhaConfirma" />
                            <span asp-validation-for="ConfirmarSenha" class="text-red"></span>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col">
                            <label asp-for="Cargo" class="control-label">Cargo:</label>
                        </div>
                        <div class="col">
                            <select id="Cargo" asp-for="Cargo" class="form-control" asp-items="Html.GetEnumSelectList<CargosEnum>()"></select>
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <a href="javascript:history.go(-1)" class="btn btn-primary mr-1">Voltar</a>
                        <input type="submit" value="Salvar" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</center>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}