@model SoftCandy.Models.Motoboy

@{
    ViewData["Title"] = "Editar Motoboy";
}
<br />
<center>
    <div class="card border-primary mb-3" style="max-width: 40rem;">
        <div class="card-header"><h4>Editar Motoboy</h4></div>
        <div class="card-body">
            <div class="row-center">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-dark"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="row">
                        <div class="col">
                            <label asp-for="Nome" class="control-label negrito">Nome:</label>
                            <input asp-for="Nome" id="nome" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Nome" class="text-red"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label asp-for="Celular" class="control-label negrito">Celular:</label>
                            <input asp-for="Celular" placeholder="Apenas números" class="form-control" autocomplete="off"/>
                            <span asp-validation-for="Celular" class="text-red"></span>
                        </div>

                        <div class="col">
                            <label asp-for="Logradouro" class="control-label negrito">Logradouro:</label>
                            <input asp-for="Logradouro" id="logradouro" class="form-control" autocomplete="off"/>
                            <span asp-validation-for="Logradouro" class="text-red"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label asp-for="Numero" class="control-label negrito">Número:</label>
                            <input asp-for="Numero" id="numero" class="form-control" autocomplete="off"/>
                            <span asp-validation-for="Numero" class="text-red"></span>
                        </div>

                        <div class="col">
                            <label asp-for="Bairro" class="control-label negrito">Bairro:</label>
                            <input asp-for="Bairro" id="bairro" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Bairro" class="text-red"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label asp-for="Cidade" class="control-label negrito">Cidade:</label>
                            <input asp-for="Cidade" id="cidade" class="form-control" autocomplete="off">
                            <span asp-validation-for="Cidade" class="text-red"></span>
                        </div>
                        <div class="col">
                            <label asp-for="Estado" class="control-label negrito">Estado:</label>
                            <input asp-for="Estado" id="estado" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Estado" class="text-red"></span>
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <a href="javascript:history.go(-1)" class="btn btn-primary mr-1">Voltar</a>
                        <input type="submit" value="Salvar" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</center>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}