@using System.Security.Claims;
@using SoftCandy.Enums;
@using SoftCandy.Utils;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SoftCandy</title>
    <link rel="stylesheet" href="~/css/reset.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-Quartz.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel='icon' type='image/png' href='~/favicon.png'>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary navbar-fixed-top" style="z-index: 9">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index"><img src="~/images/nova_logo.png" width="165" /></a>
            <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">

                @if (LoginAtual.IsVendedor(User))
                {
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cliente" asp-action="Index">
                                <img src="~/images/clientes.png" />
                                Clientes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Pedido" asp-action="Create">
                                <img src="~/images/pedidos.png" />
                                Realizar Pedidos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Pedido" asp-action="Index">
                                <img src="~/images/compras.png" />
                                Meus Pedidos
                            </a>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="nav-item">
                            <span class="nav-link">
                                <img src="~/images/usuarios.png" />
                                Vendedor(a): @(User.Identity.Name)
                            </span>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Funcionario" asp-action="Logout" class="nav-link">
                                <img src="~/images/sair.png" />
                                Sair
                            </a>
                        </li>

                    </ul>
                }
                else if (LoginAtual.IsEstoquista(User))
                {
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Categoria" asp-action="Index">
                                <img src="~/images/categoria.png" />
                                Categorias
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Fornecedor" asp-action="Index">
                                <img src="~/images/fornecedor.png" />
                                Fornecedores
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Produto" asp-action="Index">
                                <img src="~/images/produtos.png" />
                                Produtos
                            </a>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="nav-item">
                            <span class="nav-link">
                                <img src="~/images/usuarios.png" />
                                Estoquista: @(User.Identity.Name)
                            </span>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Funcionario" asp-action="Logout" class="nav-link">
                                <img src="~/images/sair.png" />
                                Sair
                            </a>
                        </li>
                    </ul>
                }
                else if (LoginAtual.IsAdministrador(User))
                {
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Funcionários</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-controller="Funcionario" asp-action="IndexAdministrador"><img src="~/images/administradores.png" />Administradores</a>
                                <a class="dropdown-item" asp-controller="Funcionario" asp-action="IndexEstoquista"><img src="~/images/estoquistas.png" />Estoquistas</a>
                                <a class="dropdown-item" asp-controller="Funcionario" asp-action="IndexVendedor"><img src="~/images/vendedores.png" />Vendedores</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Vendedor</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-controller="Cliente" asp-action="Index"><img src="~/images/clientes.png" />Clientes</a>
                                <a class="dropdown-item" asp-controller="Pedido" asp-action="Create"><img src="~/images/pedidos.png" />Realizar Pedido</a>
                                <a class="dropdown-item" asp-controller="Pedido" asp-action="Index"><img src="~/images/compras.png" />Meus Pedidos</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Estoquista</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-controller="Categoria" asp-action="Index"><img src="~/images/categoria.png" />Categorias</a>
                                <a class="dropdown-item" asp-controller="Fornecedor" asp-action="Index"><img src="~/images/fornecedor.png" />Fornecedores</a>
                                <a class="dropdown-item" asp-controller="Produto" asp-action="Index"><img src="~/images/produtos.png" />Produtos</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Caixa</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-controller="Caixa" asp-action="Caixa"><img src="~/images/compras.png" />Caixa</a>
                                <a class="dropdown-item" asp-controller="Caixa" asp-action="Historico"><img src="~/images/pedidos.png" />Histórico</a>
                            </div>
                        </li>
                        <a class="dropdown-item" asp-controller="Lote" asp-action="Index"><img src="~/images/pedidos.png" />Lote</a>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="nav-item">
                            <span class="nav-link">
                                <img src="~/images/usuarios.png" />
                                Administrador(a): @(User.Identity.Name)
                            </span>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Funcionario" asp-action="Logout" class="nav-link">
                                <img src="~/images/sair.png" />
                                Sair
                            </a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </nav>

    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        <br />
        @RenderBody()
    </div>


    <footer>
        <span>
            <a asp-controller="Home" asp-action="Footer" class="nav-link">
                © 2022 SoftCandy
            </a>
        </span>
    </footer>

    <script src="~/lib/bootstrap/dist/js/jquery-3.3.1.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/jquery-3.6.0.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/sweetalert2.all.min.js"></script>
    <script src="~/js/Chart.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
