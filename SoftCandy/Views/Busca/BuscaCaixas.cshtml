@model IEnumerable<SoftCandy.Models.Caixa>

@{
    ViewData["Title"] = "Pesquisa Caixa";
}
<center>
    <form class="form-inline">
        <div class="form-check-inline">
            <div class="container">
                <div class="row align-middle">
                    <div class="col">
                        <label for="minDate" class="control-label">Data inicial</label>
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                    <div class="col">
                        <label for="maxDate" class="control-label">Data final</label>
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                    <div class="col d-flex align-items-end">
                        <button type="submit" class="btn btn-primary mr-1">Pesquisar</button>
                        <a href="javascript:history.go(-1)" class="btn btn-info mr-1">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <br />
    <div class="card border-primary mb-3">
        <div class="card-header"><h4>Histórico de Caixas</h4></div>
        <div class="card-body">
            @if (Model.Count() != 0)
            {
                <div class="panel panel-primary">

                    <div class="panel-body">
                        <table class="table">
                            <thead>
                                <tr class="negrito">
                                    <th>
                                        Data e Hora(Abertura)
                                    </th>
                                    <th>
                                        Data e Hora(Fechamento)
                                    </th>
                                    <th>
                                        Valor Abertura
                                    </th>
                                    <th>
                                        Valor Fechamento
                                    </th>
                                    <th>
                                        Funcionário Abertura
                                    </th>
                                    <th>
                                        Funcionário Fechamento
                                    </th>
                                    <th class="center">
                                        Exibir
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DataHoraAbertura)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DataHoraFechamento)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ValorDinheiroAbertura)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ValorTotalFechamentoDinheiro)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FuncionarioAbertura.Nome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FuncionarioFechamento.Nome)
                                    </td>
                                    <td class="center">
                                        <a asp-action="Details" asp-controller="Caixa" asp-route-id="@item.IdCaixa" class="sem-sub">
                                            <img src="~/icons/exibir.svg" class="icone-menus" title="Exibir" />
                                        </a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else
            {
                <p>Não tem caixas para mostrar</p>
            }
        </div>
    </div>
</center>