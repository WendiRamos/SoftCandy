<!DOCTYPE html>
@model IEnumerable<SoftCandy.Models.Cliente>

@{
    ViewData["Title"] = "Pesquisar CLiente";
}

<h2>Pesquisar Cliente</h2>

<form class="form-inline" asp-controller="Busca" asp-action="BuscaCliente">
    <div class="form-group">
        <div class="form-group">
            <label for="Nome">Pesquisar:</label>
            <input type="text" class="form-control" name="Nome" placeholder="Insira um nome" value=@ViewData["Nome"] />
        </div>
    </div>
    <button type="submit" class=" btn btn-primary">Pesquisar</button>
    <p></p>
</form>
<table class="table ">
    <thead>
        <tr BGCOLOR="#00BFFF">
            <th>
                @Html.DisplayNameFor(model => model.Id_Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Celular)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr BGCOLOR="#F5F5F5">
                <td>
                    @Html.DisplayFor(modelItem => item.Id_Cliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Celular)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endereco)
                </td>
                <td>
                    <a asp-controller="Cliente" asp-action="Edit" asp-route-id="@item.Id_Cliente">Editar</a> |
                    <a asp-controller="Cliente" asp-action="Details" asp-route-id="@item.Id_Cliente">Detalhes</a> |
                    <a asp-controller="Cliente" asp-action="Delete" asp-route-id="@item.Id_Cliente">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>