<!DOCTYPE html>
@model IEnumerable<SoftCandy.Models.Funcionario>

@{
    ViewData["Title"] = "Pesquisar Caixa";
}
<center>
    <form class="form-inline" asp-controller="Busca" asp-action="BuscaCaixa">
        <div class="d-flex justify-content-between">
            <div class="d-flex">
                <a asp-controller="Funcionario" asp-action="IndexCaixa" class="btn btn-info mr-1">Voltar</a>
            </div>
            <div class="d-flex">
                <label for="Nome"></label>
                <input type="text" class="form-control mr-1" name="Nome" placeholder="Insira um nome" value=@ViewData["Nome"] />
                <button type="submit" class=" btn btn-primary">Pesquisar</button>
            </div>
        </div>
    </form>
    <br />
    <div class="card border-primary mb-3">
        <div class="card-header"><h4>Caixas</h4></div>
        <div class="card-body">
            @if (Model.Count() != 0)
            {
                <table class="table ">
                    <thead>
                        <tr class="negrito">
                            <th>
                                @Html.DisplayNameFor(model => model.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Celular)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th class="center">
                                Exibir
                            </th>
                            <th class="center">
                                Editar
                            </th>
                            <th class="center">
                                Inativar
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Celular)
                                </td>
                                <td class="text-preto">
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td class="center">
                                    <a asp-action="DetailsCaixa" asp-controller="Funcionario" asp-route-id="@item.Id" class="sem-sub">
                                        <img src="~/icons/exibir.svg" class="icone-menus" title="Exibir" />
                                    </a>
                                </td>
                                <td class="center">
                                    <a asp-action="EditCaixa" asp-controller="Funcionario" asp-route-id="@item.Id" class="sem-sub">
                                        <img src="~/icons/editar.svg" class="icone-menus" title="Editar" />
                                    </a>

                                </td>
                                <td class="center">
                                    <a asp-action="DeleteCaixa" asp-controller="Funcionario" asp-route-id="@item.Id" class="sem-sub">
                                        <img src="~/icons/inativar.svg" class="icone-menus" title="Inativar" />
                                    </a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>Não tem caixas para mostrar</p>
            }
        </div>
    </div>
</center>