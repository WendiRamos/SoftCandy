@model IEnumerable<SoftCandy.Models.Pedido>

@{
    ViewData["Title"] = "Pesquisa Pedidos";
}
<center>
    <form class="form-inline">
        <div class="form-check-inline">
            <div class="container">
                <div class="row align-middle">
                    <div class="col">
                        <label for="minDate" class="control-label">Data inicial</label>
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                    <div class="col">
                        <label for="maxDate" class="control-label">Data final</label>
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                    <div class="col d-flex align-items-end">
                        <button type="submit" class="btn btn-primary mr-1">Pesquisar</button>
                        <a asp-controller="Pedido" asp-action="Index" class="btn btn-info">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <br />
    <div class="card border-primary mb-3">
        <div class="card-header"><h4>Pedidos</h4></div>
        <div class="card-body">
            <div class="panel panel-primary">

                <div class="panel-body">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr class="success">
                                <th>
                                    @Html.DisplayNameFor(model => model.IdPedido)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ValorTotalPedido)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DataPedido)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Cliente)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdPedido)
                                    </td>
                                    <td>
                                        R$ @Html.DisplayFor(modelItem => item.ValorTotalPedido)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DataPedido)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cliente.NomeCliente)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</center>