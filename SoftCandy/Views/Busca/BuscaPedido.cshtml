@model IEnumerable<SoftCandy.Models.Comanda>

@{
    ViewData["Title"] = "Pesquisar Pedidos";
}
<center>
    <form class="form-inline">
        <div class="form-check-inline">
            <div class="container">
                <div class="row align-middle">
                    <div class="col">
                        <label for="minDate" class="control-label">Data inicial</label>
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                    <div class="col">
                        <label for="maxDate" class="control-label">Data final</label>
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                    <div class="col d-flex align-items-end">
                        <button type="submit" class="btn btn-primary mr-1">Pesquisar</button>
                        <a href="javascript:history.go(-1)" class="btn btn-info mr-1">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <br />
    <div class="card border-primary mb-3">
        <div class="card-header"><h4>Pedidos</h4></div>
        <div class="card-body">
            @if (Model.Count() != 0)
            {
                <div class="panel panel-primary">

                    <div class="panel-body">
                        <table class="table">
                            <thead>
                                <tr class="negrito">
                                    <th>
                                        @Html.DisplayNameFor(model => model.Id)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ValorTotal)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DataHoraCriacao)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DataHoraRecebimento)
                                    </th>
                                    <th class="center">
                                        Exibir
                                    </th>
                                    <th class="center">
                                        Inativar
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        R$ @Html.DisplayFor(modelItem => item.ValorTotal)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DataHoraCriacao)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DataHoraRecebimento)
                                    </td>
                                    <td class="center">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="sem-sub">
                                            <img src="~/icons/exibir.svg" class="icone-menus" title="Exibir" />
                                        </a>
                                    </td>
                                    <td class="center">
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="sem-sub">
                                            <img src="~/icons/inativar.svg" class="icone-menus" title="Inativar" />
                                        </a>

                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else
            {
                <p>Não tem pedidos para mostrar</p>
            }
        </div>
    </div>
</center>