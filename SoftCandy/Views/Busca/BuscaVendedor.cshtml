<!DOCTYPE html>
@model IEnumerable<SoftCandy.Models.Vendedor>

@{
    ViewData["Title"] = "Pesquisar Vendedor";
}
<center>
    <form class="form-inline" asp-controller="Busca" asp-action="BuscaVendedor">
        <div class="d-flex justify-content-between">
            <div class="d-flex">
                <a asp-controller="Vendedor" asp-action="Index" class="btn btn-info mr-1">Voltar</a>
            </div>
            <div class="d-flex">
                <label for="Nome"></label>
                <input type="text" class="form-control mr-1" name="Nome" placeholder="Insira um nome" value=@ViewData["Nome"] />
                <button type="submit" class=" btn btn-primary">Pesquisar</button>
            </div>
        </div>
    </form>
    <br />
    <div class="card border-primary mb-3">
        <div class="card-header"><h4>Vendedores</h4></div>
        <div class="card-body">
            <table class="table ">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.IdVendedor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NomeVendedor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CelularVendedor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EnderecoVendedor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EmailVendedor)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdVendedor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NomeVendedor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CelularVendedor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EnderecoVendedor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmailVendedor)
                            </td>
                            <td>
                                <a asp-controller="Vendedor" asp-action="Edit" asp-route-id="@item.IdVendedor">Editar</a> |
                                <a asp-controller="Vendedor" asp-action="Details" asp-route-id="@item.IdVendedor">Detalhes</a> |
                                <a asp-controller="Vendedor" asp-action="Delete" asp-route-id="@item.IdVendedor">Deletar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</center>