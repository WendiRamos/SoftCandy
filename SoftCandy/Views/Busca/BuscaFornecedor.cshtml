<!DOCTYPE html>
@model IEnumerable<SoftCandy.Models.Fornecedor>

@{
    ViewData["Title"] = "Pesquisar Fornecedor";
}
<center>
    <form class="form-inline" asp-controller="Busca" asp-action="BuscaFornecedor">
        <div class="d-flex justify-content-between">
            <div class="d-flex">
                <a asp-controller="Fornecedor" asp-action="Index" class="btn btn-info mr-1">Voltar</a>
            </div>
            <div class="d-flex">
                <label for="Nome"></label>
                <input type="text" class="form-control mr-1" name="Nome" placeholder="Razão Social" value=@ViewData["Nome"] />
                <button type="submit" class=" btn btn-primary">Pesquisar</button>
            </div>
        </div>
    </form>
    <br />
    <div class="card border-primary mb-3">
        <div class="card-header"><h4>Fornecedores</h4></div>
        <div class="card-body">
            @if (Model.Count() != 0)
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.IdFornecedor)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cnpj)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RazaoSocial)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NomeFantasia)
                            </th>
                            <th class="center">
                                Exibir
                            </th>
                            <th class="center">
                                Editar
                            </th>
                            <th class="center">
                                Inativar
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdFornecedor)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cnpj)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RazaoSocial)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NomeFantasia)
                                </td>
                                <td class="center">
                                    <a asp-action="Details" asp-route-id="@item.IdFornecedor" class="sem-sub">
                                        <img src="~/icons/exibir.svg" class="icone-menus" title="Exibir" />
                                    </a>
                                </td>
                                <td class="center">
                                    <a asp-action="Edit" asp-route-id="@item.IdFornecedor" class="sem-sub">
                                        <img src="~/icons/editar.svg" class="icone-menus" title="Editar" />
                                    </a>

                                </td>
                                <td class="center">
                                    <a asp-action="Delete" asp-route-id="@item.IdFornecedor" class="sem-sub">
                                        <img src="~/icons/inativar.svg" class="icone-menus" title="Inativar" />
                                    </a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>Não tem fornecedores para mostrar</p>
            }
        </div>
    </div>
</center>
