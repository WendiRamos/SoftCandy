@model SoftCandy.Models.Caixa
@using SoftCandy.Utils
@using SoftCandy.Data

@{
    ViewData["Title"] = "Abertura";
}

<center>
    <div class="card border-primary mb-3" style="max-width: 50rem;">
        <div class="card-header"><h4>Abrir Caixa</h4></div>
        <div class="card-body">
            <div class="row-center">
                <div class="col-md-4">
                    <form asp-action="Abertura">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div><span>Funcionário responsável: </span>@(User.Identity.Name)</div>
                        <div class="form-group">
                            <label asp-for="ValorAbertura" class="control-label"></label>
                            <input asp-for="ValorAbertura" class="form-control" />
                            <span asp-validation-for="ValorAbertura" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <input type="submit" value="Abrir" class="btn btn-success" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</center>