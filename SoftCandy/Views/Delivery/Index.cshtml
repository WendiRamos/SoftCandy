@model IEnumerable<SoftCandy.Models.Delivery>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ValorTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataHoraCriacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataHoraRecebimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnderecoEntrega)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recebido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Caixa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Motoboy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FormaPagamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ValorTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataHoraCriacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataHoraRecebimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnderecoEntrega)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recebido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Caixa.IdCaixa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Motoboy.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FormaPagamento)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
