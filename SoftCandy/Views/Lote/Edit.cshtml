@model SoftCandy.Models.Lote

@{
    ViewData["Title"] = "Editar";
}
<br />
<center>
    <div class="card border-primary mb-3" style="max-width: 40rem;">
        <div class="card-header"><h4>Editar Lote</h4></div>
        <div class="card-body">
            <div class="row-center">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-dark"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="row">
                        <div class="col">
                            <label asp-for="QuantidadeEstoque" class="control-label"></label>
                            <input asp-for="QuantidadeEstoque" class="form-control" autocomplete="off" />
                            <span asp-validation-for="QuantidadeEstoque" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="DataFabricacao" class="control-label"></label>
                            <input asp-for="DataFabricacao" class="form-control" />
                            <span asp-validation-for="DataFabricacao" class="text-danger"></span>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col">
                            <label asp-for="DataValidade" class="control-label"></label>
                            <input asp-for="DataValidade" class="form-control" autocomplete="off" />
                            <span asp-validation-for="DataValidade" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="PrecoCompra" class="control-label"></label>
                            <input asp-for="PrecoCompra" class="form-control" autocomplete="off" />
                            <span asp-validation-for="PrecoCompra" class="text-danger"></span>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col">
                            <label asp-for="PrecoVenda" class="control-label"></label>
                            <input asp-for="PrecoVenda" class="form-control" autocomplete="off" />
                            <span asp-validation-for="PrecoVenda" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="IdProduto" class="control-label"></label>
                            <select asp-for="IdProduto" class="form-control" asp-items="ViewBag.IdProduto"></select>
                            <span asp-validation-for="IdProduto" class="text-danger"></span>
                        </div>
                    </div>
                    <br/>
                    <div class="form-group">
                        <a href="javascript:history.go(-1)" class="btn btn-primary mr-1">Voltar</a>
                        <input type="submit"  value="Salvar" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</center>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
