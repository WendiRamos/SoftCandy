@model IEnumerable<SoftCandy.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}
<form class="form-inline" asp-controller="Busca" asp-action="BuscaCliente">
    <div class="d-flex justify-content-between">
        <div class="d-flex">
            <a asp-action="Create" class="btn btn-success mr-1">Novo Cliente</a>
            <a asp-controller="Busca" asp-action="BuscaClienteApagado" class="btn btn-info">Clientes Apagados</a>
        </div>
        <div class="d-flex">
            <label for="Nome"></label>
            <input type="text" class="form-control mr-1" name="Nome" placeholder="Insira um nome" value=@ViewData["Nome"] />
            <button type="submit" class=" btn btn-primary">Pesquisar</button>
        </div>
    </div>
</form>
<br />
<center>
    <div class="card border-primary mb-3">
        <div class="card-header"><h4>Clientes</h4></div>
        <div class="card-body">
            @if (Model.Count() != 0)
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.IdCliente)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NomeCliente)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CelularCliente)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EmailCliente)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdCliente)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NomeCliente)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CelularCliente)
                                </td>
                                <td class="text-preto">
                                    @Html.DisplayFor(modelItem => item.EmailCliente)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.IdCliente" class="sem-sub">
                                        <img src="~/icons/editar.svg" class="icone-menus" title="Editar"/>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.IdCliente" class="sem-sub">
                                        <img src="~/icons/detalhes.svg" class="icone-menus" title="Detalhes" />
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.IdCliente" class="sem-sub">
                                        <img src="~/icons/deletar.svg" class="icone-menus" title="Deletar" />
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>Não tem clientes para mostrar</p>
            }
        </div>
    </div>
</center>
